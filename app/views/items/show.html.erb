<h2 align="center">Name: <%= @item.name %></h2>

<div class="well col-xs-8 col-xs-offset-2">

<h4 class="center description"><strong>Description:</strong></h4>

<hr>

<%= simple_format(@item.description) %>

<div class="item-actions">

<%= link_to "Edit this item", edit_item_path(@item), class: "btn btn-xs btn-primary" %>

<%= link_to "Delete this item", item_path(@item), method: :delete, data: { confirm: "Are you sure you want to delete the item?"},

class: "btn btn-xs btn-danger" %>

<%= link_to "View all items", items_path, class: "btn btn-xs btn-success" %>

</div>

</div>