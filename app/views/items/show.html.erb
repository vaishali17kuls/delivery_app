<h2 align="center">Name: <%= @item.name %></h2>
<div class="well col-xs-8 col-xs-offset-2">
  <% if @item.drone %>

<ul class="listing">

<div class="row center">

<div class="col-md-4 col-md-offset-4">

<li>Created by:</li>

<li><%= drone_path(@item.drone) %></li>

<li class="item-name">

<%= link_to @item.drone.dronename, drone_path(@item.drone) %>

</li>

<li><small>

<%= pluralize(@item.drone.items.count, "item") if @item.drone.items %>

</small></li>

</div>

</div>

</ul>

<% end %>

<h4 class="center description"><strong>Description:</strong></h4>

<hr>

<%= simple_format(@item.description) %>

<div class="item-actions">

<%= link_to "Edit this item", edit_item_path(@item), class: "btn btn-xs btn-primary" %>

<%= link_to "Delete this item", item_path(@item), method: :delete, data: { confirm: "Are you sure you want to delete the item?"},

class: "btn btn-xs btn-danger" %>

<%= link_to "View all items", items_path, class: "btn btn-xs btn-success" %>

</div>

</div>