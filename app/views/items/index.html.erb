<h1 align="center">Listing all items</h1>
<% @items.each do |item| %>
<div class="row">
<div class="col-xs-8 col-xs-offset-2">
<div class="well well-lg">

<div class="item-name">
<%= link_to item.name, item_path(item) %>
</div>

<div class="item-body">
<%= truncate(item.description, length: 100) %>
</div>

<div class="item-actions">
<%= link_to "Edit this item", edit_item_path(item), class: "btn btn-xs btn-primary" %>
<%= link_to "Delete this item", item_path(item), method: :delete, data: { confirm: "Are you sure you want to delete the item?"},class: "btn btn-xs btn-danger" %>
</div>
</div>
</div>
</div>

<% end %>
<%= link_to 'New Item', new_item_path %>
