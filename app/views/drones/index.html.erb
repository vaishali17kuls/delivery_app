<h1 align="center">All drones</h1>

<div align="center">
  <%= will_paginate %>

<% @drones.each do |drone| %>

<ul class="listing">

<div class="row">

<div class="well col-md-4 col-md-offset-4">

<li class="item-name">

<%= link_to drone.dronename, drone_path(drone) %>

</li>

<li><small><%= pluralize(drone.items.count, "item") if drone.items %></small></li>

</div>

</div>

</ul>

<% end %>
<%= will_paginate %>
</div>